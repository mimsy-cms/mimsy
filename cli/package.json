{
  "name": "@mimsy-cms/cli",
  "private": false,
  "version": "1.1.0",
  "description": "",
  "main": "dist/index.js",
  "bin": {
    "msy": "./dist/index.js"
  },
  "scripts": {
    "dev": "nodemon",
    "prepublishOnly": "pnpm i && node --run build",
    "build": "node --run validate-typescript && node --run build:clean && node --run generate-dist",
    "generate-dist": "tsup src/index.ts --minify --tsconfig tsconfig.prod.json --dts --format cjs,esm --out-dir dist",
    "validate-typescript": "tsc -p tsconfig.prod.json --noEmit",
    "test": "rimraf coverage && node --run test:unit",
    "test:unit": "vitest run --coverage",
    "build:clean": "rimraf dist; exit 0"
  },
  "files": [
    "dist"
  ],
  "keywords": [],
  "author": "Mimsy Contributors",
  "license": "ISC",
  "packageManager": "pnpm@10.12.4",
  "devDependencies": {
    "@types/inquirer": "^9.0.9",
    "@types/node": "^24.0.15",
    "@vitest/coverage-istanbul": "2.1.9",
    "@vitest/coverage-v8": "2.1.9",
    "nodemon": "^3.1.10",
    "rimraf": "^6.0.1",
    "tsconfig-paths": "^4.2.0",
    "tsup": "^8.4.0",
    "tsx": "^4.19.3",
    "typescript": "^5.8.2",
    "unplugin-swc": "^1.5.5",
    "vite": "^5.4.12",
    "vitest": "^2.1.4"
  },
  "dependencies": {
    "@mimsy-cms/sdk": "workspace:*",
    "commander": "^14.0.0",
    "esbuild-register": "^3.6.0",
    "inquirer": "^12.9.0"
  }
}
